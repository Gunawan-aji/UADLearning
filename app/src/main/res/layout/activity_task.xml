<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTask"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/uad_blue"
        app:titleTextColor="@android:color/white"
        app:title="Detail Tugas" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTaskTitleDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Judul Tugas"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTaskDeadline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Batas Waktu: -"
                        android:textStyle="bold"
                        android:textColor="#FF0000"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvTaskDescriptionDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Instruksi tugas akan muncul di sini..."
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:textColor="#424242"/>

                    <Button
                        android:id="@+id/btnDownloadMateri"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Unduh Lampiran Tugas"
                        android:visibility="gone"
                        app:icon="@android:drawable/stat_sys_download"
                        app:strokeColor="@color/uad_blue"
                        android:textColor="@color/uad_blue" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Komentar Kelas"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvComments"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:minHeight="80dp"
                android:nestedScrollingEnabled="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_rounded_bg"
                android:gravity="center_vertical"
                android:paddingLeft="12dp">

                <EditText
                    android:id="@+id/etCommentInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Tambahkan komentar..."
                    android:padding="12dp"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/btnSendComment"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_send"
                    android:background="?attr/selectableItemBackground"
                    app:tint="@color/uad_blue" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="20dp"
                android:background="#DDDDDD" />

            <LinearLayout
                android:id="@+id/layoutMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tugas Anda"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etSubmissionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tulis jawaban atau catatan di sini..."
                    android:gravity="top"
                    android:minLines="4"
                    android:background="@drawable/edit_text_rounded_bg"
                    android:padding="12dp"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvFileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Belum ada file dipilih"
                    android:layout_marginTop="12dp"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:textColor="@color/uad_blue"/>

                <Button
                    android:id="@+id/btnUploadFile"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lampirkan File Jawaban"
                    app:icon="@android:drawable/ic_menu_add" />

                <ProgressBar
                    android:id="@+id/progressBarTask"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="8dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnSubmitTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kumpulkan Tugas"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/uad_blue"
                    app:cornerRadius="8dp"/>

                <TextView
                    android:id="@+id/tvGradeStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Status: Memuat..."
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="#E3F2FD"
                    android:padding="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Daftar Pengumpulan Mahasiswa:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSubmissions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>